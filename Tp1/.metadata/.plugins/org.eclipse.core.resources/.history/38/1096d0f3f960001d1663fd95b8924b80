package personnages.principaux;


public class Yakuzas extends Humains{

	private String clan ;
	private int reput = 0;
	
	public Yakuzas(String nom, String boissonPrefere, int argent, String clan) {
		super(nom, boissonPrefere, argent);
		this.clan = clan;
	}

	public String getClan() {
		return clan;
	}
	public void setClan(String clan) {
		this.clan = clan;
	}
	public int getReput() {
		return reput;
	}
	public void setReput(int reput) {
		this.reput = reput;
	}

	public void extorquer(Commercants commercant) {
		commercant.seFaireExtorquer();
		gain(commercant.getArgent());
		reput++;
		parler("Je viens de voler l'argent du commer√ßant!");
	}
	
	public void gagner() {
		perte(getArgent());
		reput--;
		parler("j'ai perdu contre le ronin!");
	}
	
}
